{{!< default}}

<main id="main">
    <section class="p-outer">
        <div class="p-inner p-hero">
            <div class="p-hero-left">
                <div>
                    <h1>Copernic - the first digital market for space art & assets</h1>
                    <p>We tokenize space assets and enable new revenue by providing access to the wider commercial and retail markets.</p>
                    <p>Democratizing access to space assets. Commercialize your space assets on SpaceMart and receive unique requests from prospective buyers.</p>
                </div>
                <div class="p-hero-buttons">
                    {{! Launches the Ghost membership portal }}
                    <button data-portal="signup">Subscribe</button>
                    {{! Link to an about page }}
                    <a href="https://copernicspace.com">Main site &rarr;</a>
                </div>
            </div>
            <div class="p-hero-right">
                {{! Loads the your cover image as defined in Ghost admin }}
                <img src="{{img_url @site.cover_image size="l"}}" alt="Copernic" />
            </div>
        </div>
    </section>

    <section class="p-outer">
        <div class="p-inner">
            <h2>Latest Articles</h2>
            <div class="p-posts-grid">
                {{#foreach posts}}
                <article class="p-post-card">
                    <img src="{{img_url feature_image size="m"}}" alt="{{feature_image_alt}}" />
                    <h3><a href="{{url}}">{{title}}</a></h3>
                </article>
                {{/foreach}}
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section p-outer">
        <div class="p-inner">
            <h2>Frequently Asked Questions</h2>
            <div class="faq-container">
                <div class="faq-item">
                    <button class="faq-question">What is Copernic?</button>
                    <div class="faq-answer">
                        <p>Copernic is the first digital market for space art & assets.</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">How does tokenization work?</button>
                    <div class="faq-answer">
                        <p>We tokenize space assets and enable new revenue streams.</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">What is SpaceMart?</button>
                    <div class="faq-answer">
                        <p>SpaceMart is our platform where you can commercialize your space assets.</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">Who can use Copernic?</button>
                    <div class="faq-answer">
                        <p>Anyone interested in space assets, including commercial and retail markets.</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">How can I subscribe?</button>
                    <div class="faq-answer">
                        <p>You can subscribe through our membership portal.</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">Where can I find more information?</button>
                    <div class="faq-answer">
                        <p>Visit our main site at copernicspace.com for more details.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<!-- Include the FAQ script -->
<script src="{{asset "assets/js/faq.js"}}"></script>
